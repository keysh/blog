{
  "name": "blog",
  "private": true,
  "scripts": {
    "zola:serve": "zola serve",
    "zola:build": "zola build",
    "tailwind:build": "postcss client/blog.css --output static/blog.css",
    "tailwind:release": "cross-env NODE_ENV=production postcss client/blog.css --output static/blog.css",
    "terser:build": "terser client/blog.js --output static/blog.js",
    "terser:release": "cross-env NODE_ENV=production terser client/blog.js --output static/blog.js --compress --mangle",
    "clean": "rimraf public/ static/blog.css static/blog.js"
  },
  "devDependencies": {
    "autoprefixer": "^10.0.2",
    "cross-env": "^7.0.2",
    "cssnano": "^4.1.10",
    "postcss": "^8.1.7",
    "postcss-cli": "^8.3.0",
    "postcss-import": "^13.0.0",
    "postcss-preset-env": "^6.7.0",
    "rimraf": "^3.0.2",
    "tailwindcss": "^2.0.1",
    "terser": "^5.5.0"
  }
}
